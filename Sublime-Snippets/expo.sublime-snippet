	<content><![CDATA[
ull expo(ull base,ull power,ull mod)
{
	ull res=1;
	while(power>0)
	{
		if(power&1)
			res=(res*base)%mod;
		power=power>>1;
		base=(base*base)%mod;
	}
	return res;
}
]]></content>
